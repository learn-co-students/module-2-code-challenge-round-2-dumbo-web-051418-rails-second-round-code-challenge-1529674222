<div>
<%= @vendor.name %>

<% @vendor.vendor_sweets.each do |sweet| %>
<%= link_to vendor_sweets.sweet.name, sweet_path(@vendor_sweets.sweet) %>
<% end %>
<br>

<%= form_for @vendor_sweet do |f| %>
  <%= collection_select :vendor_sweets, :sweet_id, Sweet.all, :id, :name %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.submit %>
<% end %>
</div>
